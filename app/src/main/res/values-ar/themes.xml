<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryDark">@color/purple_700</item>
    <item name="colorAccent">@color/white</item>
    <item name="background_color">@color/white</item>
    <!--        Our app's background colour when light mode is on == white-->
    <item name="text_color">@color/black</item>
    <!--        Text color is black-->
    <item name="button_color">@color/teal_200</item>
    <item name="button_text_color">@color/black</item>
    <item name="text_light_color">#999999</item>
    <item name="snack_bar_corner_color">@color/red</item>
    <item name="android:dropDownListViewStyle">@style/mySpinnerItemStyle</item>

  </style>

  <!-- dark application theme. -->
  <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#000</item>
    <item name="colorPrimaryDark">#000</item>
    <item name="background_color">@color/black</item>
    <!--     Our app's background changes to black when dark mode is activated -->
    <item name="text_color">@color/white</item>
    <!--     text and button color change to white to contrast with the app's background-->
    <item name="button_color">@color/teal_200</item>
    <item name="button_text_color">@color/white</item>
    <item name="text_light_color">#999999</item>
    <item name="snack_bar_corner_color">@color/red</item>
    <item name="android:dropDownListViewStyle">@style/mySpinnerItemStyle</item>
  </style>

  <style name="SnackbarTextStyle" parent="@android:style/TextAppearance">
    <item name="android:textColor">?attr/text_color</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">@dimen/_10sdp</item>
  </style>

  <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
    <item name="android:textColor">?attr/text_color</item>
    <item name="android:background">?attr/background_color</item>
    <item name="android:divider">?attr/text_light_color</item>
    <item name="android:dividerHeight">@dimen/_1sdp</item>
    <item name="android:scrollbars">none</item>

  </style>

  <style name="MatchSpinnerTheme" parent="AppTheme">
    <item name="android:dropDownListViewStyle">@style/mySpinnerItemStyle</item>
    <item name="android:textColor">?attr/text_color</item>
    <item name="android:background">?attr/background_color</item>
  </style>

  <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Rounded</item>
    <item name="android:backgroundTint">?attr/button_color</item>
    <item name="android:paddingStart">@dimen/_30sdp</item>
    <item name="android:paddingEnd">@dimen/_30sdp</item>
    <item name="android:height">@dimen/_50sdp</item>
  </style>

  <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
  <item name="cornerFamily">rounded</item>
  <item name="cornerSize">30dp</item>
  </style>


  <style name="dialog" parent="android:style/Theme.Dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@drawable/dialog_trans</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowAnimationStyle">@style/dialogNoAnimation</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:background">@drawable/dialog_trans</item>
  </style>

  <style name="dialogNoAnimation" parent="android:Animation.Dialog">
    <item name="android:windowEnterAnimation">@null</item>
    <item name="android:windowExitAnimation">@null</item>
  </style>

  <style name="dialogNoDim" parent="dialog">
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <style name="myDialog" parent="Theme.AppCompat.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="EditTextViewCustomWidthStyle" parent="android:Widget.TextView">
    <item name="android:textColor">?attr/text_color</item>
    <item name="android:textColorHint">?attr/text_light_color</item>
    <item name="android:textSize">@dimen/_10sdp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:layout_marginTop">@dimen/_5sdp</item>
    <item name="android:background">@drawable/shape_rect_box_et</item>
    <item name="android:gravity">center|start</item>
    <item name="android:height">@dimen/_40sdp</item>
    <item name="android:paddingStart">@dimen/dimen_10</item>

  </style>

</resources>