<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item android:bottom="0dp" android:left="0dp">

                <shape>
                    <gradient android:angle="0"
                        android:endColor="?attr/background_color" android:startColor="?attr/background_color" />
                    <corners android:radius="3dp"></corners>
                    <stroke android:width="1dp" android:color="?attr/text_color"></stroke>

                </shape>
            </item>
        </layer-list>
    </item>

</selector>